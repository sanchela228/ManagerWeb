@model IEnumerable<ManagerWeb.Models.Secrets>

@{
	ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/View/Secrets/Index/view.css" />


<section class="view-section">
	<div class="section-secrets">
		<div>
			<div class="header-secrets">
				@* o no o no o no no no no no *@
			</div>
			<div class="line"></div>
			<div class="list-secrets">
				@foreach (var item in Model)
				 {
					<div style="position:relative;overflow: hidden;">
						@if (item.OPEN_GUID == true)
						 {
							<div class="openguid-marker"></div>
						 }
						<div class="secrets-item" data-secret-id="">
							<div class="left-info">
								<p class="name">@item.NAME</p>
								<p class="link"><a target="_blank" href="@item.LINK">@item.LINK</a></p>
							</div>
							<div class="right-info">
								<div class="copy-static"><div class="mail"></div></div>
								<div class="copy-static"><div class="pass"></div></div>
							</div>
						</div>
					</div>
				 }
			</div>
		</div>
	</div>
	<div class="section-info-view">
		<div class="secret-view">

		</div>
		<div class="notification-view">
			<h3>Уведомленя</h3>
			<div class="hr-line"></div>
		</div>
	</div>
	<div>
		gavno
	</div>
</section>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}